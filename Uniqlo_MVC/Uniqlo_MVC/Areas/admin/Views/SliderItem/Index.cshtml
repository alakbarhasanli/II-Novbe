
@model  IEnumerable<SliderItem>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">
        DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
                                                                   href="https://datatables.net">official DataTables documentation</a>.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <a type="button" class="btn btn-success" mb-3 asp-area="Admin" asp-controller="SliderItem" asp-action="Create">Create</a>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Button url</th>
                            
                            

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (SliderItem item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td><img height="60px" width="auto" src="~/admin/img/@item.MainImageUrl" alt="..."></td>
                                <td>@item.ButtonUrl</td>
                                
                                <td><a class="btn btn-primary" asp-area="Admin" asp-controller="SliderItem" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td><a class="btn btn-danger" asp-area="Admin" asp-controller="SliderItem" asp-action="Info" asp-route-id="@item.Id">Info</a></td>
                                <td><a class="btn btn-danger" asp-area="Admin" asp-controller="SliderItem" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

                            </tr>

                        } 

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->